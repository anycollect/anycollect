<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>dist</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>../anycollect-agent/target/anycollect-agent-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>anycollect.jar</destName>
            <fileMode>644</fileMode>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>775</fileMode>
            <includes>
                <include>*sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
            <includes>
                <include>*yaml</include>
                <include>*xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/extensions</directory>
            <outputDirectory>extensions</outputDirectory>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/var/run</directory>
            <outputDirectory>var/run</outputDirectory>
            <directoryMode>755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>